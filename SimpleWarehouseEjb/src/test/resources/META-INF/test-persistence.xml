<persistence
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_2.xsd"
	version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence">
	<persistence-unit name="SimpleWarehouse-PU" transaction-type="JTA">
		<class>com.home.simplewarehouse.handlingunit.model.HandlingUnit</class>
		<class>com.home.simplewarehouse.location.model.Location</class>
		<class>com.home.simplewarehouse.singleton.simplecache.model.ApplConfig</class>	
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:test" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="" />
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
			<property name="eclipselink.ddl-generation.output-mode" value="database" />
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>
		</properties>
	</persistence-unit>
</persistence>